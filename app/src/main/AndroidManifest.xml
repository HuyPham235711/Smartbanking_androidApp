<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.afinal">

    <!-- ========== PERMISSIONS ========== -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Final"> <meta-data
        android:name="com.google.android.geo.API_KEY"
        android:value="${MAPS_API_KEY}"
        />

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Final"> <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="false" android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat">
        </activity>

        <!-- Deposit Activity -->
        <activity
            android:name=".ui.transaction.DepositActivity"
            android:exported="false"
            android:label="Nạp Tiền"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- Transfer Activity -->
        <activity
            android:name=".ui.transaction.TransferActivity"
            android:exported="false"
            android:label="Chuyển Tiền"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- Withdraw Activity - NEWLY ADDED -->
        <activity
            android:name=".ui.transaction.WithdrawActivity"
            android:exported="false"
            android:label="Rút Tiền"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- External Transfer Activity -->
        <activity
            android:name=".ui.transaction.ExternalTransferActivity"
            android:exported="false"
            android:label="Chuyển Khoản Liên Ngân Hàng"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <!-- Transaction History Activity -->
        <activity
            android:name=".ui.transaction.TransactionHistoryActivity"
            android:exported="false"
            android:label="Lịch Sử Giao Dịch"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />

        <!-- Transaction Detail Activity -->
        <activity
            android:name=".ui.transaction.TransactionDetailActivity"
            android:exported="false"
            android:label="Chi Tiết Giao Dịch"
            android:parentActivityName=".ui.transaction.TransactionHistoryActivity"
            android:screenOrientation="portrait" />
    </application>

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera.any" />
</manifest>
